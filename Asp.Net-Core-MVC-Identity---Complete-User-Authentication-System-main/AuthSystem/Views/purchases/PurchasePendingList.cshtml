    function loadPendingOrders(status) {
        $.ajax({
            url: '@Url.Action("GetPendingOrders", "purchases")',
            type: 'GET',
            data: { status: status },
            success: function (result) {
                $("#pendingOrdersContainer").html(result);
            },
            error: function () {
                console.log("An error occurred while executing the action.");
            }
        });
    }


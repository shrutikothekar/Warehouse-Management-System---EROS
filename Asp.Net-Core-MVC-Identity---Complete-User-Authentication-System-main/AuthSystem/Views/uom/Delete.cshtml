@model eros.Models.uom

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string role = Context.Request.HttpContext.Session.GetString("Role");
    var jsonData = Context.Request.HttpContext.Session.GetString("MenuMaster");
}
@if (!string.IsNullOrEmpty(role))
{
    @if (role == "ADMIN" || role == "HOSITE" || role == "WAREHOUSE")
    {
        <div class="mt-3">
            <div class="card mb-3">
                <div class="card-header bg-dark text-white">
                    <div class="d-flex align-items-baseline">
                        <h5 class="mx-auto font-weight-bolder">Unit of Measurement Delete</h5>
                        <a asp-action="Index" class="btn btn-success text-white"><i class="fa fa-reply"></i> Back</a>
                    </div>
                </div>

                <form asp-action="Delete" id="CodeSbyAnizForm">
                    <div>
                        <dl class="row mx-lg-5 mt-lg-4">
                            <dt class="col-sm-2">
                                @* @Html.DisplayNameFor(model => model.Name) *@Unit Name
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.Name)
                            </dd>
                            <dt class="col-sm-2">
                                @* @Html.DisplayNameFor(model => model.shortcut) *@Unit Code
                            </dt>
                            <dd class="col-sm-10">
                                @Html.DisplayFor(model => model.shortcut)
                            </dd>

                        </dl>
                    </div>


                    <div class="row mt-lg-3 mb-lg-3 mb-3">
                        <div class="col-sm-5 mx-lg-5 mx-sm-5 mx-md-5">
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-primary col-md-12 col-sm-12" onclick="return confirmationdelete1loc(this);" />
                        </div>
                        <div class="col-sm-5 mx-lg-4 mx-sm-4 mx-md-4">
                            <a asp-action="Index" class="btn btn-danger col-md-12 col-sm-12">Back to List</a>
                        </div>
                    </div>

                </form>

            </div>
        </div>

    }
    else
    {
        <div class="container">
            <div class="alert alert-danger alert-dismissible fade show">
                <h6 class="alert-heading">
                    <i class="bi-exclamation-octagon-fill"></i>
                    No Access !!
                </h6>
                <p>
                    You do not have access to this page. Please contact your administrator for assistance.
                </p>
                <hr>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }
}


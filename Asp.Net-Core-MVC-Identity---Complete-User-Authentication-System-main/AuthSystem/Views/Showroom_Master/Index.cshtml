@model IEnumerable<eros.Models.Showroom_Master>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string role = Context.Request.HttpContext.Session.GetString("Role");
    var jsonData = Context.Request.HttpContext.Session.GetString("MenuMaster");
}
@if (!string.IsNullOrEmpty(role))
{
    @if (role == "ADMIN" || role == "HOSITE" || role == "WAREHOUSE")
    {
        <div class="container">
            <div class="mt-3">
                <div class="card mb-3">
                    <div class="card-header bg-dark text-white">
                        <div class="d-flex align-items-baseline">
                            <h5 class="mx-auto font-weight-bolder">Showroom Master</h5>
                            <a asp-action="Create" class="btn btn-success text-white"><i class="fas fa-plus-square"></i> Add</a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                                <thead class="thead-light text-center">
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Showroom_name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.address)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.gstno)
                                        </th>
                                        <th>
                                            @* @Html.DisplayNameFor(model => model.contactno) *@Contact No.
                                        </th>


                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody class=" text-center">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Showroom_name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.address)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.gstno)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.contactno)
                                            </td>

                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Showroomid" class="btn btn-success ">
                                                    <i class="fas fa-pencil-alt"></i>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Showroomid" class="btn bg-warning">
                                                    <i style="color:white" class="fa fa-eye" aria-hidden="true"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Showroomid" class="btn btn-danger">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                                @* <a asp-action="Edit" asp-route-id="@item.Showroomid">Edit</a> |
                                    <a asp-action="Details" asp-route-id="@item.Showroomid">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.Showroomid">Delete</a>*@
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="container">
            <div class="alert alert-danger alert-dismissible fade show">
                <h6 class="alert-heading">
                    <i class="bi-exclamation-octagon-fill"></i>
                    No Access !!
                </h6>
                <p>
                    You do not have access to this page. Please contact your administrator for assistance.
                </p>
                <hr>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }
}

